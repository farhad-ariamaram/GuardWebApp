@page
@model GuardWebApp.Pages.LocationDetailPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>ویرایش جزئیات مکان</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LocationDetail.Id" />
            <div class="form-group">
                <label class="control-label">مکان</label>
                <select asp-for="LocationDetail.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="LocationDetail.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">آب و هوا</label>
                <select asp-for="LocationDetail.ClimateId" class="form-control" asp-items="ViewBag.ClimateId">
                    <option value="">خالی</option>
                </select>
                <span asp-validation-for="LocationDetail.ClimateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">بررسی</label>
                <select asp-for="LocationDetail.CheckId" class="form-control" asp-items="ViewBag.CheckId"></select>
                <span asp-validation-for="LocationDetail.CheckId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">زمان شروع</label>
                <input asp-for="LocationDetail.StartTime" class="form-control" />
                <span asp-validation-for="LocationDetail.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">زمان پایان</label>
                <input asp-for="LocationDetail.EndTime" class="form-control" />
                <span asp-validation-for="LocationDetail.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ شروع</label>
                <input asp-for="LocationDetail.StartDate" class="form-control" />
                <span asp-validation-for="LocationDetail.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ پایان</label>
                <input asp-for="LocationDetail.EndDate" class="form-control" />
                <span asp-validation-for="LocationDetail.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}