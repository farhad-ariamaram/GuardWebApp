@page
@model GuardWebApp.Pages.LocationDetailPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>ویرایش جزئیات مکان</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LocationDetail.Id" />
            <div class="form-group">
                <label class="control-label">مکان</label>
                <select asp-for="LocationDetail.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="LocationDetail.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">بررسی مکان</label>
                <select asp-for="LocationDetail.CheckLocationId" class="form-control" asp-items="ViewBag.CheckLocationId"></select>
                <span asp-validation-for="LocationDetail.CheckLocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">آب و هوا</label>
                <select asp-for="LocationDetail.ClimateId" class="form-control" asp-items="ViewBag.ClimateId"></select>
                <span asp-validation-for="LocationDetail.ClimateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
