@page
@model GuardWebApp.Pages.RunPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>از حذف مورد زیر مطمئن هستید؟</h3>
<br />
<div>
    <h4>Run</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            تایید کننده
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Run.Approver.Name)
        </dd>
        <dt class="col-sm-2">
            برنامه
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Run.Plan.Id)
        </dd>
        <dt class="col-sm-2">
            وضعیت
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Run.Status.Name)
        </dd>
        <dt class="col-sm-2">
            نگهبان
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Run.User.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Run.Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a class="btn btn-outline-dark" asp-page="./Index">انصراف</a>
    </form>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="./Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>
