@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-12 text-center">
        <h1 class="display-4">ورود به سیستم</h1>
        <br />
        @if (ModelState.Count > 0)
        {
            <div class="alert alert-danger">@Html.ValidationMessage("WrongUP")</div>
        }
        <form method="post">
            <div class="mb-3">
                <label class="form-label">نام کاربری</label>
                <input asp-for="User.Username" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="User.Username"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">رمز ورود</label>
                <input type="password" asp-for="User.Password" class="form-control">
                <span class="text-danger" asp-validation-for="User.Password"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">ورود</button>
        </form>
    </div>
</div>

<div class="row">
    <input type="text" id="ctl00_ContentPlaceHolder1_txtCoodingTreeSeparator" /><br /><br />
    <input type="text" id="ctl00_ContentPlaceHolder1_txtCoodingTreeCode" /><br /><br />
    <input type="text" id="ctl00_ContentPlaceHolder1_txtCoodingTreeName" /><br /><br />
    <input type="text" id="ctl00_ContentPlaceHolder1_txtCoodingTreeNameEN" /><br /><br />
</div>
