@page
@model GuardWebApp.Pages.ViolationTypePage.EditModel

@{
    ViewData["Title"] = "Edit";
}


<h4>
    ویرایش نوع تخلف
</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ViolationType.Id" />
            <div class="form-group">
                <label class="control-label">نام تخلف</label>
                <input asp-for="ViolationType.Name" class="form-control" />
                <span asp-validation-for="ViolationType.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ماهیت تخلف</label>
                <select asp-for="ViolationType.ViolationNatureId" class="form-control" asp-items="ViewBag.ViolationNatureId"></select>
                <span asp-validation-for="ViolationType.ViolationNatureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
