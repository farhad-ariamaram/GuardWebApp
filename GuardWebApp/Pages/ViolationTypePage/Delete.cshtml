@page
@model GuardWebApp.Pages.ViolationTypePage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>از حذف مورد زیر مطمئن هستید؟</h3>
<br />
<div>
    <h4>نوع تخلف</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام تخلف
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViolationType.Name)
        </dd>
        <dt class="col-sm-2">
            طبیعت تخلف
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViolationType.ViolationNature.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ViolationType.Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a class="btn btn-outline-dark" asp-page="./Index">انصراف</a>
    </form>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="./Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>