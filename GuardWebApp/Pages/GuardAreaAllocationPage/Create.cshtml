@page
@model GuardWebApp.Pages.GuardAreaAllocationPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>تخصیص محل گشت جدید</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">نگهبان</label>
                <select asp-for="GuardAreaAllocation.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ شروع</label>
                <input asp-for="GuardAreaAllocation.StartDate" class="form-control" />
                <span asp-validation-for="GuardAreaAllocation.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ پایان(در صورت خالی بودن تا آخر سال در نظر گرفته خواهد شد)</label>
                <input asp-for="GuardAreaAllocation.EndDate" class="form-control" />
                <span asp-validation-for="GuardAreaAllocation.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">محل گشت</label>
                <select asp-for="GuardAreaAllocation.GuardAreaId" class="form-control" asp-items="ViewBag.GuardAreaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
