@page
@model GuardWebApp.Pages.ViolationPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>جدول تخلفات</h1>

<p>
    <a class="btn btn-success" asp-page="Create"><i class="fa fa-plus"></i></a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    توضیحات
                </th>
                <th>
                    تاریخ تایید
                </th>
                <th>
                    تاریخ ثبت
                </th>
                <th>
                    تایید کننده
                </th>
                <th>
                    ثبت کننده
                </th>
                <th>
                    اجرا
                </th>
                <th>
                    وضعیت
                </th>
                <th>
                    نگهبان
                </th>
                <th>
                    نوع تخلف
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Violation)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApproveDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegisterDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approver.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Registrar.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Run.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ViolationType.Name)
                    </td>
                    <td>
                        <a class="btn btn-warning text-white" asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section BottomPanel {
    <a class="btn btn-danger rounded-circle" asp-page="../Panel"><i class="fa fa-arrow-left"></i></a>
}
