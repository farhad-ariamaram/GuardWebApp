@page
@model GuardWebApp.Pages.GuardPage.IndexModel
@{
    ViewData["Title"] = "لیست نگهبانان معرفی شده به سیستم";
}

<h1>لیست نگهبانان معرفی شده به سیستم</h1>

<p>
    <a class="btn btn-success" asp-page="Create"><i class="fa fa-plus"></i></a>
</p>

@if (ViewData["userAdded"] != null) 
{ 
    <div class="alert alert-success">
        نگهبان با موفقیت به سیستم اضافه شد
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    نام
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.usersList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section BottomPanel {
    <a class="btn btn-danger rounded-circle" asp-page="../Panel"><i class="fa fa-arrow-left"></i></a>
}

