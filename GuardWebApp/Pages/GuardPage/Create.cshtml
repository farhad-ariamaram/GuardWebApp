@page
@model GuardWebApp.Pages.GuardPage.CreateModel
@{
    ViewData["Title"] = "معرفی نگهبان جدید به سیستم";
}

<h4>معرفی نگهبان جدید به سیستم</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ModelState.Count > 0)
        {
            <div class="alert alert-danger">@Html.ValidationMessage("WrongUP")</div>
        }
        <form method="post">
            <div class="mb-3">
                <label class="form-label">نام کاربری</label>
                <input asp-for="User.Username" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="User.Username"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">رمز ورود</label>
                <input type="password" asp-for="User.Password" class="form-control">
                <span class="text-danger" asp-validation-for="User.Password"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">ورود</button>
        </form>
    </div>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}