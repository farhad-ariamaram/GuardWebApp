@page
@model GuardWebApp.Pages.PlanPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>از حذف مورد زیر مطمئن هستید؟</h3>
<br />
<div>
    <h4>برنامه</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            تاریخ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plan.DateTime)
        </dd>
        <dt class="col-sm-2">
            مکان
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plan.Location.Name)
        </dd>
        <dt class="col-sm-2">
            شیفت
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plan.Shift.Id)
        </dd>
        <dt class="col-sm-2">
            نگهبان
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plan.User.Name)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Plan.Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a class="btn btn-outline-dark" asp-page="./Index">انصراف</a>
    </form>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="./Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>