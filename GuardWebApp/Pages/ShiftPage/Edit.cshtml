@page
@model GuardWebApp.Pages.ShiftPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>ویرایش شیفت</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Shift.Id" />
            <div class="form-group">
                <label class="control-label">محل گشت</label>
                <select asp-for="Shift.GuardAreaId" class="form-control" asp-items="ViewBag.GuardAreaId"></select>
                <span asp-validation-for="Shift.GuardAreaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ریتم</label>
                <select asp-for="Shift.RhythmId" class="form-control" asp-items="ViewBag.RhythmId"></select>
                <span asp-validation-for="Shift.RhythmId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ</label>
                <input asp-for="Shift.DateTime" class="form-control" />
                <span asp-validation-for="Shift.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
