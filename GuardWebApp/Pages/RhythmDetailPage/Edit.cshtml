@page
@model GuardWebApp.Pages.RhythmDetailPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>ویرایش جزئیات ریتم</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="RhythmDetail.RhythmId" type="hidden" value="@Model.RhythmDetail.RhythmId" />
            <input type="hidden" asp-for="RhythmDetail.Id" />
            <div class="form-group">
                <label class="control-label">مکان</label>
                <select asp-for="RhythmDetail.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="RhythmDetail.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">شماره ترتیب</label>
                <input asp-for="RhythmDetail.OrderNo" class="form-control" />
                <span asp-validation-for="RhythmDetail.OrderNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">زمان</label>
                <input type="time" asp-for="RhythmDetail.Time" class="form-control" />
                <span asp-validation-for="RhythmDetail.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="Index" asp-route-rhythmId="@Model.RhythmDetail.RhythmId"><i class="fa fa-arrow-left"></i></a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
