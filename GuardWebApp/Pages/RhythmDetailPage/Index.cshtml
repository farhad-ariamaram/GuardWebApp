@page
@model GuardWebApp.Pages.RhythmDetailPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>جزئیات ریتم ها</h1>
<h2>ریتم انتخاب شده : @ViewData["CurrentRhythm"]</h2>
<p>
    <a class="btn btn-success" asp-page="Create" asp-route-rhythmId="@Model.rhythmIdProp"><i class="fa fa-plus"></i></a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    شماره ترتیب
                </th>
                <th>
                    زمان
                </th>
                <th>
                    مکان
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RhythmDetail)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location.Name)
                    </td>
                    <td>
                        <a class="btn btn-warning text-white" asp-page="./Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section BottomPanel {
    <a class="btn btn-danger rounded-circle" href="#" onclick="quitBox();"><i class="fa fa-times"></i></a>
}