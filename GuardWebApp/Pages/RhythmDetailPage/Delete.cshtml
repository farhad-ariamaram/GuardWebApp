@page
@model GuardWebApp.Pages.RhythmDetailPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>از حذف مورد زیر مطمئن هستید؟</h3>
<br />
<div>
    <h4>جزئیات ریتم</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            شماره ترتیب
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RhythmDetail.OrderNo)
        </dd>
        <dt class="col-sm-2">
            زمان
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RhythmDetail.Time)
        </dd>
        <dt class="col-sm-2">
            مکان
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RhythmDetail.Location.Name)
        </dd>
        <dt class="col-sm-2">
            ریتم
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RhythmDetail.Rhythm.Title)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="RhythmDetail.Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a class="btn btn-outline-dark" asp-page="./Index">انصراف</a>
    </form>
</div>

<div>
    @section BottomPanel {
        <a class="btn btn-danger rounded-circle" asp-page="./Index"><i class="fa fa-arrow-left"></i></a>
    }
</div>